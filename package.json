{
  "name": "dom-box",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "watch": {
    "demo:js": [
      "index.js",
      "modules.js",
      "modules/*.js",
      "demo/index.js"
    ]
  },
  "scripts": {
    "test": "node node_modules/xo/cli.js && node_modules/mocha/bin/mocha",
    "demo:js": "node node_modules/browserify/bin/cmd.js ./demo/index.js -t babelify --outfile ./demo/bundle.js",
    "demo:watch": "npm-watch",
    "demo:livereload": "node node_modules/livereload/bin/livereload.js ./demo/",
    "dev": "npm run demo:livereload & npm run demo:watch"
  },
  "author": "Chris Ebert <chris_ebert@gmx.de> (https://github.com/ChrisEbert)",
  "license": "MIT",
  "xo": {
    "esnext": true,
    "envs": [
      "browser"
    ],
    "globals": [
      "describe",
      "it"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.5.2",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "jsdom": "^9.2.1",
    "livereload": "^0.4.1",
    "mocha": "^2.4.5",
    "mocha-jsdom": "^1.1.0",
    "npm-watch": "^0.1.1",
    "xo": "^0.12.1"
  }
}
